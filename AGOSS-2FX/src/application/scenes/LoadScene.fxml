<?xml version="1.0" encoding="UTF-8"?>

<?language JavaScript?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" opacity="0.0" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoadSceneController">
  <style>
	-fx-padding: 10;
  </style>
  <children>
      <Pane prefHeight="438.0" prefWidth="480.0">
         <children>
          <Label fx:id="inputLbl" alignment="CENTER_LEFT" cache="true" cacheHint="SCALE" prefHeight="30.0" prefWidth="200.0" text="Load" textAlignment="LEFT" />
            <VBox alignment="BASELINE_LEFT" layoutX="14.0" layoutY="30.0" prefHeight="90.0" prefWidth="253.0" style="-fx-spacing: 10;">
               <children>
                  <Label prefHeight="17.0" prefWidth="218.0" text="Please enter a save name:" />
                  <TextField fx:id="saveField" disable="true" />
                  <Label prefHeight="22.0" prefWidth="218.0" text="Or select a save from the list:" />
               </children>
            </VBox>
            <ListView fx:id="saveList" layoutX="14.0" layoutY="119.0" prefHeight="300.0" prefWidth="450.0" />
            <Button fx:id="refreshList" layoutX="405.0" layoutY="88.0" mnemonicParsing="false" text="Refresh " />
         </children>
      </Pane>
      <ButtonBar prefHeight="40.0" prefWidth="480.0">
         <buttons>
          <Button fx:id="ReturnBtn" alignment="CENTER" cacheShape="false" mnemonicParsing="false" text="Return" textAlignment="CENTER" />
          <Button fx:id="Continue" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" text="Contunue" textAlignment="CENTER" />
         </buttons>
      </ButtonBar>
  </children>
</VBox>
